<?xml version="1.0" encoding="utf-8"?>
<!-- Este layout hace referencia a la toolbar personalizada de la pagina de inicio para enviar mensajes -->
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/orange"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/chatTooolbarIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/orange"
            android:scaleType="fitCenter"
            android:src="?attr/actionModeCloseDrawable" />

        <ImageView
            android:id="@+id/otherProfileImage"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/title_toolbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center|start"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#8A000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btInvitar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4sp"
            android:layout_weight="0.4"
            android:backgroundTint="@color/orange"
            android:scaleType="fitCenter"
            android:src="@drawable/botoninvitar"
            />

    </LinearLayout>

</com.google.android.material.appbar.AppBarLayout>
