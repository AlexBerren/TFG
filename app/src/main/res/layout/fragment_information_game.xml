<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationGameFragment" >

    <include
        android:id="@+id/include"
        layout="@layout/custom_toolbar_followers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInformacionPartida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="1.5"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Información de la Partida"

                android:textSize="50dp" />

            <TextView
                android:id="@+id/tvNombreJuego1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.6"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="left"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCreador1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:text="Creador:"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/tvNombreCreador2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center|start"
                    android:textSize="20dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFecha1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:text="Fecha:"
                    android:textSize="19dp"

                    />

                <TextView
                    android:id="@+id/tvFecha2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center|start"
                    android:textSize="20dp"

                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHora1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:text="Hora:"
                    android:textSize="19dp"

                    />

                <TextView
                    android:id="@+id/tvHora2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center|start"
                    android:textSize="20dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUbicacion1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:text="Ubicación:"
                    android:textSize="19dp"

                    />

                <TextView
                    android:id="@+id/tvUbicacion2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center|start"
                    android:textSize="20dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvParticipantes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Participantes:"
                    android:textSize="19dp"

                    />

                <TextView
                    android:id="@+id/tvNombreParticipantes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center|start"
                    android:textSize="20dp"

                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNotas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:text="Notas:"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/etNotas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp">

            </Space>

            <Button
                android:id="@+id/btnGuardarNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center"
                android:text="GUARDAR NOTAS"

                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>